#!/bin/bash

# Check if Script is Run as user 
if [[ $EUID -ne 0 ]]; then

  tar -xvzf config/config_mx_linux.tar.gz
  
  rm -R ~/.config
  mv -f .config/ ~

  mkdir ~/mxsnapshot

  sudo ./script/install_begin

  ./script/bookmark_install 

  ./script/generate_exclude 

  rm ~/.vbox*

  #sudo mx-snapshot -c  /home/$util/mxsnapshot/mx-snapshot.conf

  echo -ne "
-------------------------------------------------------------------------
                    Wait until the reboot ...
-------------------------------------------------------------------------
"&& sleep 10

  sudo reboot
  else
  echo "You must be a non-root user to run this script, please run ./install" 2>&1

  exit 1
fi

